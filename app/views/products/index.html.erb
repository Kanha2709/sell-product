<h1>Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <% if product.image.attached? %>
          <%= image_tag product.image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= truncate(product.description, length: 100) %></p>
          <p class="card-text"><strong>Price: </strong><%= number_to_currency(product.price) %></p>
          <p class="card-text"><strong>Stock: </strong><%= product.stock %></p>
          <a href="<%= product_path(product) %>" class="btn btn-primary text-white">View Product</a>
          <a href="<%= "#" %>" class="btn btn-secondary text-white">Add to Cart</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
